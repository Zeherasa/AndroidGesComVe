<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D8D8"
    tools:context=".opciones">


    <Button
        android:id="@+id/btnListadoOperarios"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="#3F4042"
        android:fontFamily="serif-monospace"
        android:text="LISTADO OPERARIOS"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnAnuncios"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="#3F4042"
        android:fontFamily="serif-monospace"
        android:text="Anuncios"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/btnIncidencias"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="#3F4042"
        android:fontFamily="serif-monospace"
        android:text="Incidencias"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnNotificaciones"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="#3F4042"
        android:fontFamily="serif-monospace"
        android:text="Notificaciones"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="172dp"
        android:focusableInTouchMode="false"
        android:fontFamily="serif-monospace"
        android:text="OPCIONES"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_opciones" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="89dp"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>